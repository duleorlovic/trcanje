<% if @feed.any? %> 
    <table class="microposts">
      <% @feed.each do |f| %>
        <tr>
          <td class="gravatar">
            <%= link_to gravatar_for(f.users),f.users %>
          </td>
          <td class="micropost">
            <span class="user">
              <%= link_to f.users.name,f.users %>
            </span>
            <span class="content">
              <%= f.content %>
            </span>
            <span class="timestamp">
              Posted <%= time_ago_in_words(f.created_at) %> ago.
            </span>
          </td>
          <td class="delete">
            <%= link_to 'delete',f,method: :delete,confirm:"You sure?",title: f.content %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
